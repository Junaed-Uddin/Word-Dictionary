<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.junaedmohammed.wordexplorer.GamesFragment"
    android:orientation="vertical"
    android:padding="10sp"
    android:background="@drawable/background_quiz">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/score"
        android:layout_width="160sp"
        android:layout_height="55sp"
        android:textSize="25sp"
        android:layout_marginTop="20sp"
        android:text="Score :"
        android:paddingLeft="20sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent">
    </TextView>

    <TextView
        android:id="@+id/wrong"
        android:layout_width="220sp"
        android:layout_height="55sp"
        android:textSize="25sp"
        android:layout_marginTop="20sp"
        android:text="Mismatch :"
        android:paddingLeft="30sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@id/score">
    </TextView>



    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/score"
        android:layout_marginTop="47dp"
        android:paddingLeft="7sp"
        android:text="A"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/but"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_marginTop="45dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="A"
        android:layout_marginLeft="55sp"/>

    <Button
        android:id="@+id/but1"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/but"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="B"
        android:layout_marginLeft="55sp"/>

    <Button
        android:id="@+id/but2"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/but1"
        android:layout_marginTop="20sp"
        android:textAllCaps="false"
        android:text="C"
        android:layout_marginLeft="55sp"/>

    <Button
        android:id="@+id/but3"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/but2"
        android:layout_marginTop="20sp"
        android:textAllCaps="false"
        android:text="D"
        android:layout_marginLeft="55sp"/>


    <Button
        android:id="@+id/quit"
        android:layout_width="140sp"
        android:layout_height="55sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="Quit"
        android:textAllCaps="true"
        android:textColor="@color/blue"
        android:textSize="25sp" />


</RelativeLayout>
