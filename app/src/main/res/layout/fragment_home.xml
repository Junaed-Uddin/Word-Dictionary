<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9a9ca1"
        android:orientation="vertical"
        tools:context="com.example.junaedmohammed.wordexplorer.ui.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/edit_text"
                android:layout_width="360sp"
                android:layout_height="50sp"
                android:inputType="text"
                android:background="#423154"
                android:hint="Enter the word"
                android:maxLines="1"
                android:paddingLeft="10sp"
                android:textColorHint="#FFFEFEFD"
                android:textColor="#FFFFFFFF"/>

            <Button
                android:id="@+id/bt_mic"
                android:layout_width="50sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:background="@drawable/ic_mic_black_24dp"
                android:layout_marginTop="2sp"/>

        </LinearLayout>

<!--
        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/bt_search"
                    android:layout_width="82sp"
                    android:layout_height="40sp"
                    android:fontFamily="monospace"
                    android:text="Search"
                    android:textAllCaps="false" />


                <Button
                    android:id="@+id/bt_pronounc"
                    android:layout_width="145sp"
                    android:layout_height="40sp"
                    android:fontFamily="monospace"
                    android:text="Pronunciation"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/bt_fav"
                    android:layout_width="101sp"
                    android:layout_height="40sp"
                    android:fontFamily="monospace"
                    android:text="Favourite"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/bt_Clr"
                    android:layout_width="82sp"
                    android:layout_height="40sp"
                    android:fontFamily="monospace"
                    android:text="Clear"
                    android:textAllCaps="false" />

            </LinearLayout>

        <TextView
            android:id="@+id/searchText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:paddingLeft="10sp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="5sp"/>

        <TextView
            android:id="@+id/searchText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:paddingLeft="10sp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="5sp"/>

        <TextView
            android:id="@+id/searchText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:paddingLeft="10sp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="5sp"/>

        <TextView
            android:id="@+id/searchText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:paddingLeft="10sp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="5sp"/>

       <!-- </FrameLayout>-->

    </LinearLayout>



    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:itemIconTint="@color/darkgray"
        app:itemTextColor="@color/darkgray"
        app:menu="@menu/nav_menu" />


</android.support.v4.widget.DrawerLayout>

